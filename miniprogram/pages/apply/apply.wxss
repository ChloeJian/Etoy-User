.list .toyMain{
  display: block;
  width:100%;
  height:100%;
}

.toyItem{
  display: flex;
  flex-direction: row;
  height: 180rpx;
  padding: 10rpx;
  border: 1rpx solid #efefef;
  margin: 8rpx;
  border-radius: 8rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.toyImage image{
  width: 200rpx;
  height: 150rpx;
  margin: 15rpx 0;
  display: block;
}
.toyMsg{
  flex:2;
  margin-left: 20rpx;
}

.toyMsgItem{
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
}

.itemTitle{
  font-size: 35rpx;
  font-weight: bold;
  color: #000000;
}

.cardButton {
  /* line-height: 60rpx; */
  font-size: 10rpx;
  color: #E54847;
  font-weight: normal;
}