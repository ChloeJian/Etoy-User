    icon="comment-o"
    link-type="navigateTo"
    url="../myComment/myComment"
    text="待评价"
    />
  </van-grid>
  </view>

  <view class="functionBox">
      <van-cell is-link title="联系我们" link-type="navigateTo" url="/pages/#/index"/>
      <van-cell is-link title="关于" link-type="navigateTo" url="/pages/#/index"/>
      <van-cell is-link title="退出登录" link-type="navigateTo" url="/pages/#/index"/>
    </view>

</view>

